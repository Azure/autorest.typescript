  },
  module: {
    rules: [
      {
        test: /\.tsx?$/,
        loader: 'ts-loader',
        options: {
@if (!string.IsNullOrEmpty(Model.DefaultApiVersion))
{
<text>
          configFile: path.join(__dirname, '@(Model.DefaultApiVersion)/tsconfig.esm.json'),
</text>
}
else
{
<text>
          configFile: path.join(__dirname, "tsconfig.esm.json")
</text>
