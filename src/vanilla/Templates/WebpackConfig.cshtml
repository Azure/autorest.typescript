@EmptyLine

/**
 * @@type {import('webpack').Configuration}
 */
const config = {
  mode: 'production',
@if (!string.IsNullOrEmpty(Model.DefaultApiVersion))
{
<text>
  entry: './@(Model.DefaultApiVersion)/lib/@(Model.Name.ToCamelCase()).ts',
</text>
}
else
{
<text>
  entry: './lib/@(Model.Name.ToCamelCase()).ts',
</text>
}
  devtool: 'source-map',
