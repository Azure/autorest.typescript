{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es6",
    "lib": [],
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist-esm",
    "declarationDir": "./types",
    "paths": { "@msinternal/multiple-inheritance-rest": ["./src/index"] }
  },
  "include": ["./src/**/*.ts", "samples-dev/**/*.ts"]
}
