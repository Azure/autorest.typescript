import "@cadl-lang/rest";

using Cadl.Rest;

// TODO: (missing-docs) Add documentation
model CatalogArray {
  @doc("Array of products")
  productArray: Product[];
}

@doc("The product documentation.")
model Product {
  @doc("Unique identifier representing a specific product for a given latitude & longitude. For example, uberX in San Francisco will have a different product_id than uberX in Los Angeles.")
  product_id: string;

  @doc("Description of product.")
  description: string;

  @doc("Display name of product.")
  display_name: string;

  @doc("Capacity of product. For example, 4 people.")
  capacity: string;

  @doc("Image URL representing the product.")
  image: string;
}

